<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="computer" class = "com.spring.core.oop.quiz.Computer">
        <constructor-arg ref="mouse"/>
        <constructor-arg ref="monitor"/>
        <constructor-arg ref="keyboard"/>
    </bean>
    <bean id="mouse" class = "com.spring.core.oop.quiz.Mouse"></bean>
    <bean id="monitor" class = "com.spring.core.oop.quiz.Monitor"></bean>
    <bean id="keyboard" class = "com.spring.core.oop.quiz.KeyBoard"></bean>

</beans>